generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Blog {
  blog_id Int @id @default(autoincrement())
  title   String
  content String
  timeCreated DateTime @default(now())

  Blogs Blogs[]
}

model Blogs {
  current_blog_id Int @id @default(autoincrement())
  blogs Blog[]
}